    function setLang(lang) {
    $('#lang script').prop("src", '/components/codemirror/mode/' + lang + '/' + lang + '.js');
    var editor = CodeMirror.fromTextArea(document.getElementById('code'), {lineNumbers: true, language: 'javascript'});
    }
